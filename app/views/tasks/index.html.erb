<p id="notice"><%= notice %></p>

<h1>学習履歴</h1>

<table>
  <thead>
    <tr>
      <th>学習内容</th>
      <th>ユーザ</th>
      <th>開始時刻</th>
      <th>終了時刻</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.user.name %></td>
        <td><%= task.start_date.to_s(:datetime_jp) %></td>
        <td><%= task.end_date.to_s(:datetime_jp) %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

